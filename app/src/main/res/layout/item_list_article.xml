<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_author"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/view_margin_normal"
        android:layout_marginTop="@dimen/view_margin_normal"
        app:layout_constraintEnd_toStartOf="@id/tv_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_small"
        app:layout_constraintBottom_toBottomOf="@id/iv_author"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/iv_author"
        app:layout_constraintTop_toTopOf="@id/iv_author" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_margin_normal"
        android:textSize="@dimen/font_size_small"
        app:layout_constraintBottom_toBottomOf="@id/tv_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_author"
        app:layout_constraintTop_toTopOf="@id/tv_author" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_margin_normal"
        android:layout_marginStart="@dimen/view_margin_normal"
        android:layout_marginTop="@dimen/view_margin_normal"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="@dimen/font_size_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_author" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/font_size_normal" />


</android.support.constraint.ConstraintLayout>